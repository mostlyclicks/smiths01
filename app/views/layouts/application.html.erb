<!DOCTYPE html>
<%= render "/refinery/html_tag" %>
  <% site_bar = render('/refinery/site_bar', :head => true) -%>
  <head>
    <link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet">
    <link href='http://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Yellowtail' rel='stylesheet' type='text/css'>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= render "/refinery/head" %>
  </head>
  <body id="<%= canonical_id @page %>">
    <%= site_bar -%>
    <div id="page_container">
      <header id="header">
        <%#= render "/refinery/header" -%>
        <div class="container">
          <div class="row">

            <div class="col-md-12">
              <%= image_tag 'SmithsBlackLogo-shadow-highlite.png', class: 'img-responsive' %>
            </div>

          </div>

        </div>
      </header>

      <div class="container" id="top-contact">
        <div class="row">
          <div class="col-md-6 col-xs-6">
            <h3>
              <%= yield :phone %><br />
              <%= yield :email %>
            </h3>
          </div>
          <div class="col-md-6 col-xs-6 text-right">
            <%= link_to 'SHOP NOW at TREKBIKES.com', 'http://www.trekbikes.com/us/en_US/?shop=733450', class: 'btn btn-warning', style: "color:#000000;" %>
              <h3><%= yield :facebook %></h3>
              <%#= yield :youtube %></div>
        </div>
      </div>
      <!-- <div class="container-fluid" id="link-to-store">
        <div class="row">
          <div class="col-md-12 text-center">
            <h3 class=""><%#= link_to 'SHOP NOW at TREKBIKES.com', 'http://www.trekbikes.com/us/en_US/?shop=733450' %></h3>
          </div>
        </div> -->


      </div>
      <section id="page">
        <%= yield %>
      </section>
      <footer>
        <div class="container">
          <div class="row">
            <div class="col-md-12">
              <%= render "/refinery/footer" -%>
            </div>
          </div>
        </div>
      </footer>
    </div>
    <%= render "/refinery/javascripts" %>
  </body>
</html>
