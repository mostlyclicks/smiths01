<%= form_for [refinery, :brands_admin, @brand] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @brand,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= f.label :logo -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :logo_id,
               :image => @brand.logo,
               :toggle_image_display => false -%>
  </div>

  <div class='field'>
    <%= f.label :website -%>
    <%= f.text_field :website -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.brands.admin.brands.brand'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @brand.name) -%>
<% end -%>
