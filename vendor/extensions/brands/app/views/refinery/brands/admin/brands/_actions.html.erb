<ul>
  <% if ::Refinery::Brands::Admin::BrandsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.brands_admin_brands_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_brands_admin_brand_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Brands::Admin::BrandsController.sortable? && ::Refinery::Brands::Brand.many? %>
  <li>
    <%= link_to t('.reorder', :what => "Brands"),
                 refinery.brands_admin_brands_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Brands"),
                 refinery.brands_admin_brands_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
