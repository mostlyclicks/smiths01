<%= form_for [refinery, :employees_admin, @employee] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @employee,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= f.label :picture -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :picture_id,
               :image => @employee.picture,
               :toggle_image_display => false -%>
  </div>

  <div class='field'>
    <%= f.label :job_title -%>
    <%= f.text_field :job_title -%>
  </div>

  <div class='field'>
    <%= f.label :number_of_bikes -%>
    <%= f.number_field :number_of_bikes -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.employees.admin.employees.employee'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @employee.name) -%>
<% end -%>
