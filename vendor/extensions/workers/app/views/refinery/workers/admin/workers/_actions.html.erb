<ul>
  <% if ::Refinery::Workers::Admin::WorkersController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.workers_admin_workers_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_workers_admin_worker_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Workers::Admin::WorkersController.sortable? && ::Refinery::Workers::Worker.many? %>
  <li>
    <%= link_to t('.reorder', :what => "Workers"),
                 refinery.workers_admin_workers_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Workers"),
                 refinery.workers_admin_workers_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
