<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(worker) -%>">
  <span class='title'>
    <%= worker.name %>

  </span>
  <span class='actions'>
    
    <%= link_to refinery_icon_tag("application_edit.png"), refinery.edit_workers_admin_worker_path(worker),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), refinery.workers_admin_worker_path(worker),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'refinery.admin.delete', :title => worker.name),
        :method => :delete %>
  </span>
</li>
